  "description": "Node Server",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "copy:public": "copyfiles -u 1 src/public/**/*.* dist",
    "start": "cross-env DEBUG=Fntic* PORT=4321 node ./dist/index.js",
    "start:mon": "cross-env DEBUG=Fntic* PORT=4321 nodemon ./dist/index.js",
